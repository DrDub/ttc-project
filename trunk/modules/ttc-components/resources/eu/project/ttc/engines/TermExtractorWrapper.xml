        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>ProcessProgramFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>FinalizeProgramFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>OutputResultFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
