<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>true</primitive>
  <annotatorImplementationName>uima.sandbox.mapper.engines.Mapper</annotatorImplementationName>
  <analysisEngineMetaData>
    <name>Chinese Stem Normalizer</name>
    <description/>
    <version>1.0</version>
    <vendor>University of Nantes (LINA, UMR CNRS 6241)</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>Source</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>Target</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>Source</name>
        <value>
          <string>eu.project.ttc.types.WordAnnotation</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Target</name>
        <value>
          <string>eu.project.ttc.types.WordAnnotation:stem</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <imports>
        <import name="eu.project.ttc.types.TermSuiteTypeSystem"/>
      </imports>
    </typeSystemDescription>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">org.apache.uima.WordAnnotation</type>
        </inputs>
        <outputs>
          <type allAnnotatorFeatures="true">org.apache.uima.WordAnnotation</type>
        </outputs>
        <languagesSupported>
          <language>zh</language>
        </languagesSupported>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <externalResourceDependencies>
    <externalResourceDependency>
      <key>Mapping</key>
      <description/>
      <interfaceName>uima.sandbox.mapper.resources.Mapping</interfaceName>
      <optional>false</optional>
    </externalResourceDependency>
  </externalResourceDependencies>
  <resourceManagerConfiguration>
    <externalResources>
      <externalResource>
        <name>ChineseStemMapping</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/chinese/resources/chinese-lemma-mapping.xml</fileUrl>
        </fileResourceSpecifier>
        <implementationName>uima.sandbox.mapper.resources.MappingResource</implementationName>
      </externalResource>
    </externalResources>
    <externalResourceBindings>
      <externalResourceBinding>
        <key>Mapping</key>
        <resourceName>ChineseStemMapping</resourceName>
      </externalResourceBinding>
    </externalResourceBindings>
  </resourceManagerConfiguration></analysisEngineDescription>
