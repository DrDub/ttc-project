<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="LatvianTermIndexer">
      <import name="eu.project.ttc.latvian.engines.LatvianTermIndexer"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="EditDistanceGathering">
      <import name="eu.project.ttc.all.engines.EditDistanceGathering"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="LatvianTermDetector">
      <import name="eu.project.ttc.latvian.engines.LatvianTermDetector"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="LatvianTermFilter">
      <import name="eu.project.ttc.latvian.engines.LatvianTermFilter"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="LatvianCompoundSplitter">
      <import name="eu.project.ttc.latvian.engines.LatvianCompoundSplitter"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="IndexWriter">
      <import name="eu.project.ttc.all.engines.IndexWriter"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="XmiCasConsumer">
      <import name="eu.project.ttc.all.engines.XmiCasConsumer"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="LatvianTermGatherer">
      <import name="eu.project.ttc.latvian.engines.LatvianTermGatherer"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="LatvianLemmaFilter">
      <import name="eu.project.ttc.latvian.engines.LatvianLemmaFilter"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="TermIndexer">
      <import name="eu.project.ttc.all.engines.TermIndexer"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <analysisEngineMetaData>
    <name>Latvian Acabit Analysis Engine</name>
    <description/>
    <version>1.0</version>
    <vendor>University of Nantes (LINA, UMR CNRS 6241)</vendor>
    <configurationParameters searchStrategy="language_fallback">
      <configurationParameter>
        <name>Directory</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>XmiCasConsumer/Directory</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>File</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>IndexWriter/File</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Type</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermIndexer/Type</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Language</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermIndexer/Language</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>TermVariationRuleFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>LatvianTermGatherer/File</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>MultiWordPatternRuleFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>LatvianTermDetector/MultiWordPatternRuleFile</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>NeoclassicalElementFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>LatvianTermDetector/NeoclassicalElementFile</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Dictionary</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>LatvianCompoundSplitter/File</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>EditDistanceClassName</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>EditDistanceGathering/EditDistanceClassName</parameter>
        </overrides>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>Directory</name>
        <value>
          <string>/tmp</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>File</name>
        <value>
          <string>lv-terminology.xmi</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Type</name>
        <value>
          <string>eu.project.ttc.types.TermAnnotation</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Language</name>
        <value>
          <string>lv</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>EditDistanceClassName</name>
        <value>
          <string>EditDistanceClassName</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <flowConstraints>
      <fixedFlow>
        <node>LatvianTermDetector</node>
        <node>LatvianTermFilter</node>
        <node>LatvianLemmaFilter</node>
        <node>TermIndexer</node>
        <node>LatvianTermIndexer</node>
        <node>LatvianCompoundSplitter</node>
        <node>EditDistanceGathering</node>
        <node>LatvianTermGatherer</node>
        <node>IndexWriter</node>
        <node>XmiCasConsumer</node>
      </fixedFlow>
    </flowConstraints>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">org.apache.uima.examples.SourceDocumentInformation</type>
          <type allAnnotatorFeatures="true">eu.project.ttc.types.WordAnnotation</type>
        </inputs>
        <outputs>
          <type allAnnotatorFeatures="true">org.apache.uima.TermAnnotation</type>
        </outputs>
        <languagesSupported>
          <language>lv</language>
        </languagesSupported>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration>
    <externalResources>
      <externalResource>
        <name>DefaultIndex</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/all/engines/IndexWriter.xml</fileUrl>
        </fileResourceSpecifier>
        <implementationName>uima.sandbox.indexer.resources.DefaultIndex</implementationName>
      </externalResource>
      <externalResource>
        <name>LatvianFilter</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/latvian/resources/latvian-stop-word-filter.xml</fileUrl>
        </fileResourceSpecifier>
        <implementationName>uima.sandbox.filter.resources.FilterResource</implementationName>
      </externalResource>
    </externalResources>
    <externalResourceBindings>
      <externalResourceBinding>
        <key>LatvianTermGatherer/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>LatvianTermIndexer/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>TermIndexer/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>IndexWriter/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>LatvianTermFilter/Filter</key>
        <resourceName>LatvianFilter</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>LatvianLemmaFilter/Filter</key>
        <resourceName>LatvianFilter</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>LatvianCompoundSplitter/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>EditDistanceGathering/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
    </externalResourceBindings>
  </resourceManagerConfiguration>
</analysisEngineDescription>
