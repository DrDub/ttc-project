<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<patterns>
	<pattern id="noun-adjective">
		<sequence>
			<patterns>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
					<constraint>
						<eq key="category" value="noun" />
						</constraint>
					</annotation>
				</pattern>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
					<constraint>
						<eq key="category" value="adjective" />
						</constraint>
					</annotation>
				</pattern>
			</patterns>
		</sequence>
	</pattern>
	<pattern id="noun-adjective-adjective">
		<sequence>
			<patterns>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
						<constraint>
							<eq key="category" value="noun" />
						</constraint>
					</annotation>
				</pattern>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
						<constraint>
							<eq key="category" value="adjective" />
						</constraint>
					</annotation>
				</pattern>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
						<constraint>
							<eq key="category" value="adjective" />
						</constraint>
					</annotation>
				</pattern>
			</patterns>
		</sequence>
	</pattern>
	<pattern id="noun-preposition-noun">
		<sequence>
			<patterns>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
						<constraint>
							<eq key="category" value="noun" />
						</constraint>
					</annotation>
				</pattern>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
						<constraint>
							<and>
								<constraints>
								<constraint>
									<eq key="category" value="adposition" />
								</constraint>
								<constraint>
									<eq key="subCategory" value="preposition" />
								</constraint>
																</constraints>
								
							</and>
						</constraint>
					</annotation>
				</pattern>
				<pattern>
					<annotation type="eu.project.ttc.types.WordAnnotation">
						<constraint>
							<eq key="category" value="adjective" />
						</constraint>
					</annotation>
				</pattern>
			</patterns>
		</sequence>
	</pattern>
</patterns>
