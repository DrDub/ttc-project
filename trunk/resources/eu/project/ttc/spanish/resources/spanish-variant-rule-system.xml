<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<rules>
	<rule id="noun-adjective-adjective">
		<parameters>
			<parameter name="a" type="eu.project.ttc.types.TermAnnotation" />
		</parameters>
		<constraint>
			<eq>
				<left>
					<feature name="category" >
						<element>
							<variable name="a" />
						</element>
					</feature>	
				</left>
				<right>
					<string value="noun-adjective-adjective" />
				</right>
			</eq>
		</constraint>
	</rule>
	<rule id="noun-adjective-variant">
		<parameters>
			<parameter name="a" type="eu.project.ttc.types.TermAnnotation" />
			<parameter name="b" type="eu.project.ttc.types.TermAnnotation" />
		</parameters>
		<constraint>
			<and>
				<left>
					<eq>
						<left>
							<feature name="category" >
								<element>
									<variable name="a" />
								</element>
							</feature>	
						</left>
						<right>
							<string value="noun-adjective" />
						</right>
					</eq>
				</left>
				<right>
					<eq>
						<left>
							<feature name="category" >
								<element>
									<variable name="b" />
								</element>
							</feature>	
						</left>
						<right>
							<string value="noun-adjective-adjective" />
						</right>
					</eq>
				</right>
			</and>
		</constraint>
	</rule>
</rules>
