<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="SpanishNeoClassicalAdjectiveDetector">
      <import name="eu.project.ttc.engines.spanish.SpanishNeoClassicalAdjectiveDetector"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="SpanishNeoClassicalNounDetector">
      <import name="eu.project.ttc.engines.spanish.SpanishNeoClassicalNounDetector"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <flowController key="AnnotationTypeFlowController">
    <import name="eu.project.ttc.controllers.AnnotationTypeFlowController"/>
  </flowController>
  <analysisEngineMetaData>
    <name>Spanish NeoClassical Term Detector</name>
    <description/>
    <version>1.0</version>
    <vendor>University of Nantes (LINA, UMR CNRS 6241)</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>ClassicalRootBankFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>SpanishNeoClassicalAdjectiveDetector/ClassicalRootBankFile</parameter>
          <parameter>SpanishNeoClassicalNounDetector/ClassicalRootBankFile</parameter>
        </overrides>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings/>
    <flowConstraints>
      <fixedFlow>
        <node>SpanishNeoClassicalNounDetector</node>
        <node>SpanishNeoClassicalAdjectiveDetector</node>
      </fixedFlow>
    </flowConstraints>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">org.apache.uima.multext.NounAnnotation</type>
          <type allAnnotatorFeatures="true">org.apache.uima.multext.AdjectiveAnnotation</type>
          <type allAnnotatorFeatures="true">org.apache.uima.examples.SourceDocumentInformation</type>
        </inputs>
        <outputs>
          <type allAnnotatorFeatures="true">org.apache.uima.TermNoteAnnotation</type>
          <type allAnnotatorFeatures="true">org.apache.uima.TermComponentAnnotation</type>
        </outputs>
        <languagesSupported>
          <language>fr</language>
        </languagesSupported>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration>
    <externalResources>
      <externalResource>
        <name>SpanishClassicalRootBank</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/resources/ClassicalRootBank.Spanish</fileUrl>
        </fileResourceSpecifier>
        <implementationName>fr.univnantes.lina.uima.models.ClassicalRootBankResource</implementationName>
      </externalResource>
    </externalResources>
    <externalResourceBindings>
      <externalResourceBinding>
        <key>SpanishNeoClassicalAdjectiveDetector/ClassicalRootBank</key>
        <resourceName>SpanishClassicalRootBank</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>SpanishNeoClassicalNounDetector/ClassicalRootBank</key>
        <resourceName>SpanishClassicalRootBank</resourceName>
      </externalResourceBinding>
    </externalResourceBindings>
  </resourceManagerConfiguration>
</analysisEngineDescription>
