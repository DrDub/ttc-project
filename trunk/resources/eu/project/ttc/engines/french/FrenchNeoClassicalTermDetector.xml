<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="FrenchNeoClassicalNounDetector">
      <import name="eu.project.ttc.engines.french.FrenchNeoClassicalNounDetector"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="FrenchNeoClassicalAdjectiveDetector">
      <import name="eu.project.ttc.engines.french.FrenchNeoClassicalAdjectiveDetector"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <flowController key="ConstraintFlowController">
    <import name="fr.free.rocheteau.jerome.engines.constraints.ConstraintFlowController"/>
  </flowController>
  <analysisEngineMetaData>
    <name>French NeoClassical Term Detector</name>
    <description/>
    <version>1.0</version>
    <vendor>University of Nantes (LINA, UMR CNRS 6241)</vendor>
    <configurationParameters/>
    <configurationParameterSettings/>
    <flowConstraints>
      <fixedFlow>
        <node>FrenchNeoClassicalAdjectiveDetector</node>
        <node>FrenchNeoClassicalNounDetector</node>
      </fixedFlow>
    </flowConstraints>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">eu.project.ttc.types.WordAnnotation</type>
        </inputs>
        <outputs>
          <type allAnnotatorFeatures="true">org.apache.uima.CompoundWordTermAnnotation</type>
        </outputs>
        <languagesSupported>
          <language>fr</language>
        </languagesSupported>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration>
    <externalResources>
      <externalResource>
        <name>FrenchClassicalRootBank</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/resources/ClassicalRootBank.French</fileUrl>
        </fileResourceSpecifier>
        <implementationName>fr.univnantes.lina.uima.models.ClassicalRootBankResource</implementationName>
      </externalResource>
    </externalResources>
    <externalResourceBindings>
      <externalResourceBinding>
        <key>FrenchNeoClassicalNounDetector/ClassicalRootBank</key>
        <resourceName>FrenchClassicalRootBank</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>FrenchNeoClassicalAdjectiveDetector/ClassicalRootBank</key>
        <resourceName>FrenchClassicalRootBank</resourceName>
      </externalResourceBinding>
    </externalResourceBindings>
  </resourceManagerConfiguration>
</analysisEngineDescription>
