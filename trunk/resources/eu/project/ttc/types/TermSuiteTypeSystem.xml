<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>Term Suite Type System</name>
  <description>This Type System gathers Type Systems required by every UIMA CAS processors used within the ttc.types.project.</description>
  <version>1.0</version>
  <vendor>University of Nantes (LINA, UMR CNRS 6241)</vendor>
  <imports>
    <import name="org.apache.uima.examples.SourceDocumentInformation"/>
  </imports>
  <types>
    <typeDescription>
      <name>eu.project.ttc.types.WordAnnotation</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>category</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>lemma</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>stem</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.TermAnnotation</name>
      <description/>
      <supertypeName>eu.project.ttc.types.TermComponentAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>complexity</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>frequency</name>
          <description/>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>specificity</name>
          <description/>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.SingleWordTermAnnotation</name>
      <description/>
      <supertypeName>eu.project.ttc.types.TermAnnotation</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.MultiWordTermAnnotation</name>
      <description/>
      <supertypeName>eu.project.ttc.types.TermAnnotation</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.NeoClassicalCompoundTermAnnotation</name>
      <description/>
      <supertypeName>eu.project.ttc.types.TermAnnotation</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.TermComponentAnnotation</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>category</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>lemma</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.TermContextAnnotation</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>context</name>
          <description/>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
          <elementType>eu.project.ttc.types.TermAnnotation</elementType>
        </featureDescription>
        <featureDescription>
          <name>term</name>
          <description/>
          <rangeTypeName>eu.project.ttc.types.TermAnnotation</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.VectorAnnotation</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>item</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>frequency</name>
          <description/>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.CandidateAnnotation</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>translation</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>score</name>
          <description/>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>rank</name>
          <description/>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>eu.project.ttc.types.TranslationAnnotation</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>term</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>language</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
