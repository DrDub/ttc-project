<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="InterlingualSimilarityAnnotator">
      <import name="eu.project.ttc.all.engines.InterlingualSimilarityAnnotator"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="XmiCasConsumer">
      <import name="eu.project.ttc.all.engines.XmiCasConsumer"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <analysisEngineMetaData>
    <name>Mimesis Analysis Engine</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <configurationParameters searchStrategy="language_fallback">
      <configurationParameter>
        <name>SimilarityDistanceClassName</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>InterlingualSimilarityAnnotator/SimilarityDistanceClassName</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>File</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>InterlingualSimilarityAnnotator/File</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Directory</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>XmiCasConsumer/Directory</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>DictionaryFile</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>InterlingualSimilarityAnnotator/DictionaryFile</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Reverse</name>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>InterlingualSimilarityAnnotator/Reverse</parameter>
        </overrides>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>SimilarityDistanceClassName</name>
        <value>
          <string>eu.project.ttc.metrics.Cosinus</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>File</name>
        <value>
          <string>index.xmi</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Directory</name>
        <value>
          <string>tmp</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Reverse</name>
        <value>
          <boolean>false</boolean>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <flowConstraints>
      <fixedFlow>
        <node>InterlingualSimilarityAnnotator</node>
        <node>XmiCasConsumer</node>
      </fixedFlow>
    </flowConstraints>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration>
    <externalResources>
      <externalResource>
        <name>DefaultDictionary</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>fr/univnantes/lina/uima/resources/Dictionary.Default</fileUrl>
        </fileResourceSpecifier>
        <implementationName>fr.univnantes.lina.uima.dictionaries.DictionaryResource</implementationName>
      </externalResource>
      <externalResource>
        <name>TermContextIndex</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/models/TermContextIndexListener.class</fileUrl>
        </fileResourceSpecifier>
        <implementationName>eu.project.ttc.models.TermContextIndexListener</implementationName>
      </externalResource>
    </externalResources>
    <externalResourceBindings>
      <externalResourceBinding>
        <key>InterlingualSimilarityAnnotator/Index</key>
        <resourceName>TermContextIndex</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>InterlingualSimilarityAnnotator/Dictionary</key>
        <resourceName>DefaultDictionary</resourceName>
      </externalResourceBinding>
    </externalResourceBindings>
  </resourceManagerConfiguration>
</analysisEngineDescription>
