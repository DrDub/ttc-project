<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="TermContextIndexer">
      <import name="eu.project.ttc.all.engines.TermContextIndexer"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="TermContextIndexWriter">
      <import name="eu.project.ttc.all.engines.TermContextIndexWriter"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="TermContextBuilder">
      <import name="eu.project.ttc.all.engines.TermContextBuilder"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <analysisEngineMetaData>
    <name>Katastasis Analysis Engine</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <configurationParameters searchStrategy="language_fallback">
      <configurationParameter>
        <name>AnnotationType</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermContextBuilder/AnnotationType</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>ScopeSize</name>
        <type>Integer</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermContextBuilder/ScopeSize</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Type</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermContextIndexer/Type</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>AssociationRateClassName</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermContextIndexer/AssociationRateClassName</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>File</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermContextIndexWriter/File</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Language</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>TermContextIndexer/Language</parameter>
        </overrides>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>AnnotationType</name>
        <value>
          <string>eu.project.ttc.types.SingleWordTermAnnotation</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>ScopeSize</name>
        <value>
          <integer>3</integer>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Type</name>
        <value>
          <string>eu.project.ttc.types.TermContextAnnotation</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>AssociationRateClassName</name>
        <value>
          <string>eu.project.ttc.metrics.logLikelihood</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>File</name>
        <value>
          <string>term-context-index.xmi</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Language</name>
        <value>
          <string>x-unspecified</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <flowConstraints>
      <fixedFlow>
        <node>TermContextBuilder</node>
        <node>TermContextIndexer</node>
        <node>TermContextIndexWriter</node>
      </fixedFlow>
    </flowConstraints>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">eu.project.ttc.types.TermContextIndexAnnotation</type>
          <type allAnnotatorFeatures="true">eu.project.ttc.types.TermContextEntryAnnotation</type>
        </inputs>
        <outputs>
          <type allAnnotatorFeatures="true">eu.project.ttc.types.TermContextVectorAnnotation</type>
        </outputs>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration>
    <externalResources>
      <externalResource>
        <name>DefaultIndex</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/all/engines/TermContextIndexWriter.xml</fileUrl>
        </fileResourceSpecifier>
        <implementationName>fr.free.rocheteau.jerome.models.DefaultIndex</implementationName>
      </externalResource>
    </externalResources>
    <externalResourceBindings>
      <externalResourceBinding>
        <key>TermContextIndexWriter/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>TermContextIndexer/Index</key>
        <resourceName>DefaultIndex</resourceName>
      </externalResourceBinding>
    </externalResourceBindings>
  </resourceManagerConfiguration>
</analysisEngineDescription>
