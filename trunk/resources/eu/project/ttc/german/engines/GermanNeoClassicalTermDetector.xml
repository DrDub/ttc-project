<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="GermanNeoClassicalNounDetector">
      <import name="eu.project.ttc.german.engines.GermanNeoClassicalNounDetector"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="GermanNeoClassicalAdjectiveDetector">
      <import name="eu.project.ttc.german.engines.GermanNeoClassicalAdjectiveDetector"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <analysisEngineMetaData>
    <name>German NeoClassical Term Detector</name>
    <description/>
    <version>1.0</version>
    <vendor>University of Nantes (LINA, UMR CNRS 6241)</vendor>
    <configurationParameters/>
    <configurationParameterSettings/>
    <flowConstraints>
      <fixedFlow>
        <node>GermanNeoClassicalAdjectiveDetector</node>
        <node>GermanNeoClassicalNounDetector</node>
      </fixedFlow>
    </flowConstraints>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">eu.project.ttc.types.WordAnnotation</type>
        </inputs>
        <outputs>
          <type allAnnotatorFeatures="true">eu.project.ttc.types.CompoundWordTermAnnotation</type>
        </outputs>
        <languagesSupported>
          <language>de</language>
        </languagesSupported>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration>
    <externalResources>
      <externalResource>
        <name>GermanRootBank</name>
        <description/>
        <fileResourceSpecifier>
          <fileUrl>eu/project/ttc/german/resources/RootBank.German</fileUrl>
        </fileResourceSpecifier>
        <implementationName>eu.project.ttc.models.RootBankResource</implementationName>
      </externalResource>
    </externalResources>
    <externalResourceBindings>
      <externalResourceBinding>
        <key>GermanNeoClassicalNounDetector/RootBank</key>
        <resourceName>GermanRootBank</resourceName>
      </externalResourceBinding>
      <externalResourceBinding>
        <key>GermanNeoClassicalAdjectiveDetector/RootBank</key>
        <resourceName>GermanRootBank</resourceName>
      </externalResourceBinding>
    </externalResourceBindings>
  </resourceManagerConfiguration>
</analysisEngineDescription>
